@model WebApplication1.Models.SendWidgetModel
@{
    ViewBag.Title = "Widget Sender!";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
@using (Html.BeginForm("Send", "Widget", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Send a Widget to a Friend! (Use <a href="/Widget/WebApi">Web API</a> or <a href="/Widget/MvcJson">MVC JSON</a> instead)</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.toEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.toEmail, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.widgetMessage, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.widgetMessage, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send!" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</div>
